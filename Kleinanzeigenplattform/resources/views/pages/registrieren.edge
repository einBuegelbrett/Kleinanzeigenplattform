<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title> AdonisJS - A fully featured web framework for Node.js </title>

  @vite(['resources/css/app.css', 'resources/js/app.js'])
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <style>
    .container-lg {
      background-color: #f8f9fa;
      border-width: 2px !important; /*https://stackoverflow.com/questions/48506610/bootstrap-4-border-utilities*/
    }
  </style>
</head>
<body class="bg-body-secondary">
  @include('partials/header')

  <div class="d-flex justify-content-center align-items-center">
    <div class="container-lg w-50 shadow rounded my-4 mx-5 p-5">
      <h2 class="mb-4 d-flex justify-content-center">Registrieren</h2>
      <form action="/home/registrieren" method="post" class="row">
        {{csrfField()}}
        <div class="col-md-6 mb-3">
          <label for="neu_benutzername" class="form-label">Benutzername:</label>
          <input type="text" class="form-control" id="neu_benutzername" name="benutzername" placeholder="Benutzername">
        </div>
        <div class="col-md-6 mb-3">
          <label for="email" class="form-label">E-Mail:</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="E-Mail">
        </div>
        <div class="col-md-6 mb-3">
          <label for="vorname" class="form-label">Vorname:</label>
          <input type="text" class="form-control" id="vorname" name="vorname" placeholder="Vorname">
        </div>
        <div class="col-md-6 mb-3">
          <label for="nachname" class="form-label">Nachname:</label>
          <input type="text" class="form-control" id="nachname" name="nachname" placeholder="Nachname">
        </div>
        <div class="col-md-6 mb-3">
          <label for="neu_passwort" class="form-label">Passwort:</label>
          <input type="password" class="form-control" id="neu_passwort" name="passwort" placeholder="Passwort">
        </div>
        <div class="col-md-6 mb-4">
          <label for="neu_passwort_wiederholen" class="form-label">Passwort wiederholen:</label>
          <input type="password" class="form-control" id="neu_passwort_wiederholen" name="passwort_wiederholen" placeholder="Passwort wiederholen">
        </div>
        @if(error != undefined)
            <p class="d-flex justify-content-center text-danger">{{error}}</p>
        @end
        <div class="col-md-12 mb-4 d-flex justify-content-center">
          <button type="submit" class="btn btn-success">Registrieren</button>
        </div>
      </form>
      <div class="row justify-content-between">
        <div class="col-auto">
          <div class="d-flex align-items-center">
            <p class="mb-0 me-2">Schon Registriert?</p>
            <a href="/home/anmelden" class="link-primary">Anmelden</a>
          </div>
        </div>
        <div class="col-auto">
          <a href="/home" class="link-danger">Als Gast fortfahren</a>
        </div>
      </div>
    </div>
  </div>

  @include('partials/footer')
</body>
</html>
